<Spacer@Widget>:
    size_hint_y: None
    height: dp(2)
    canvas.before:
        Color:
            rgba: (0.3765, 0.4000, 0.3961, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<Detection>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: dp(250)
        padding: dp(15), 0, dp(15), 0
        canvas.before:
            Color:
                rgba: (0.1176, 0.1176, 0.1216, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            Label:
                text: 'Detection'
                color: (1,1,1,1)
                font_name: 'Roboto'
                font_size: sp(17)
                halign: 'left'
                valign: 'middle'
                text_size: self.size
            Widget:
        BoxLayout:
            orientation: 'vertical'
            padding: dp(10),dp(10),dp(10),dp(10)
            size_hint_y: None
            height: dp(100)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: (0.1647, 0.1647, 0.1686, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(20)
                spacing: dp(5)
                CheckBox:
                    size_hint: None, None
                    size: dp(20), dp(20)
                    id: ckbx_body
                    active: True
                Label:
                    text: 'Body'
                    color: 1, 1, 1, 1
                    font_name: 'Roboto'
                    font_size: dp(17)
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    on_touch_down:
                        if self.collide_point(*args[1].pos): ckbx_body.active = not ckbx_body.active
            Spacer:
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(20)
                spacing: dp(5)
                CheckBox:
                    size_hint: None, None
                    size: dp(20), dp(20)
                    id: ckbx_face
                    active: True
                Label:
                    text: 'Face'
                    color: 1, 1, 1, 1
                    font_name: 'Roboto'
                    font_size: dp(17)
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    on_touch_down:
                        if self.collide_point(*args[1].pos): ckbx_face.active = not ckbx_face.active
            Spacer:
        Widget:
            size_hint_y: 1